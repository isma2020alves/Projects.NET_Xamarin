<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.ScheduleUserView"
             Title="My Appointments">
    <ListView ItemsSource="{Binding List}" Margin="25">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding DateFormatted}" FontSize="20" VerticalOptions="Center"></Label>
                            <Label Text=" - " VerticalOptions="Center"></Label>
                            <Label Text="{Binding Model}" VerticalOptions="Center" FontAttributes="Bold"></Label>


                        </StackLayout>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>